@model IEnumerable<FinalProject.Models.Comment>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comments Index</title>
</head>
<body>

    <h2>My comments</h2>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleComment.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentUser)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleComment.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentUser)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    
    </table>

    <p>
        @Html.ActionLink("Create New comment", "Create")
    </p>

</body>
</html>
