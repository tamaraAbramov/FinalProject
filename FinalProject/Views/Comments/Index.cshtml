@model IEnumerable<FinalProject.Models.Comment>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comments Index</title>
</head>
<body>

    <h2>My comments</h2>
    <br />

    @using (Html.BeginForm())
    {
        <div class="search-tbl-header">
            <table cellpadding="0" cellspacing="0" border="0" class="search-tbl">
                <thead>
                    <tr>
                        <th class="search-tbl-th">@Html.TextBox("articleTitle", "", new { @class = "search-box", @style = "width:80%", @placeholder = "Comment title" })</th>
                        <th class="search-tbl-th">@Html.TextBox("commentTitle", "", new { @class = "search-box", @style = "width:80%", @placeholder = "Comment title" })</th>
                        <th class="search-tbl-th">@Html.TextBox("commentUserName", "", new { @class = "search-box", @style = "width:80%", @placeholder = "Written by" })</th>
                        <th class="search-tbl-th"><input type="submit" value="Search" class="btn search-btn" /></th>
                    </tr>
                </thead>
            </table>
        </div>
    }
    <br />
    <br />

    <p>
        @Html.ActionLink("Create New comment", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleComment.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDate)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleComment.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    
    </table>

    

</body>
</html>
